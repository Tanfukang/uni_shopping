
.container {
	width: 100%;
	background: #EEEEEE;
}

/* 导航栏 */
.nav {
	width: 100%;
	height: 80rpx;
	border-bottom: 5rpx solid #F4F4F4;
	line-height: 80rpx;
	background: #FAFAFA;
	padding-left: 20rpx;
}
.nav text {
	display: inline-block;
	padding-left: 20rpx;
}

/* 订单号及 下单时间 */
.information {
	width: 100%;
	height: 120rpx;
	background: white;
	padding-left: 20rpx;
	margin-bottom: 20rpx;
}
.information .order {
	font-size: 30rpx;
	color: #BABABA;
	padding-top: 20rpx;
}
.information .time {
	font-size: 30rpx;
	padding-top: 10rpx;
}

/* 已购商品 */
.merchandise {
	width: 100%;
	height: 180rpx;
	background: white;
}
.merchandise .sign {
	width: 100%;
	height: 180rpx;
	border-bottom: #F7F7F7 solid 10rpx;
	margin: 10rpx 0rpx;
}
.merchandise .sign image {
	width: 160rpx;
	height: 160rpx;
	margin-top: 20rpx;
	float: left;
}
.merchandise .sign .odd {
	font-size: 30rpx;
	color: #AAAAAA;
}
.merchandise .sign .name {
	font-size: 32rpx;
}
.merchandise .sign .box{float: left;margin-top: 60rpx;line-height: 40rpx;margin-left: 20rpx;}
.merchandise .sign .img{width: 40rpx;height: 40rpx;float: right;margin-top: 65rpx;margin-right: 20rpx;}

