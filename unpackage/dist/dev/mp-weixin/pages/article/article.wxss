
.container {
		width: 100%;
}

	/* 导航栏 */
.nav {
		width: 100%;
		margin: auto;
		height: 80rpx;
		background: #FAFAFA;
		line-height: 80rpx;
		border-bottom: 5rpx solid #F4F4F4;
}
.nav view {
		padding-left: 30rpx;
		float: left;
}

